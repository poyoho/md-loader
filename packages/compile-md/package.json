{
  "name": "@poyoho/compile-md",
  "version": "0.0.5",
  "description": "markdown compile",
  "scripts": {
    "test": "jest -c ./jest.config.js",
    "build": "rimraf dist && node ./script/build.js",
    "dev": "node ./script/build.js --watch all",
    "dev:browser": "node ./script/build.js --watch browser",
    "dev:node": "node ./script/build.js --watch node",
    "play:browser": "vite",
    "play:node": "cd playground && node ./nodejs.js",
    "release": "node script/release.js"
  },
  "author": "poyoho",
  "license": "ISC",
  "dependencies": {
    "diacritics": "^1.3.0",
    "escape-html": "^1.0.3",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.7",
    "markdown-it-container": "^2.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "prismjs": "^1.23.0"
  },
  "keywords": [
    "markdown-it"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx,json}": [
      "eslint --fix --ext .js,.ts,.tsx,.jsx"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/browser.js",
  "main": "./dist/node.js",
  "types": "./dist/index.d.ts"
}
