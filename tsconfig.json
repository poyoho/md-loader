{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "jsx": "preserve",
    "lib": [
      "ESNext", "DOM"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src"
  ]
}
 